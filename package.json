{
  "name": "@hpcc-js/web-components",
  "version": "0.0.1",
  "description": "hpcc-js - Web Components Library",
  "private": true,
  "keywords": [],
  "sideEffects": false,
  "main": "dist/index.js",
  "jsdelivr": "dist/index.min.js",
  "unpkg": "dist/index.min.js",
  "typeings": "dist/index.d.ts",
  "files": [
    "dist/*",
    "types/*"
  ],
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "docs:copy-build": "copyfiles -u 1 \"./dist/index.min.js\" ./docs/.vitepress/dist/assets/",
    "docs:copy-images": "copyfiles -u 2 \"./docs/images/**/*.{png,jpg,gif}\" ./docs/.vitepress/dist/images/",
    "docs:copy-res": "run-p docs:copy-build docs:copy-images",
    "docs:patch": "node utils/patch-docs.mjs",
    "clean": "rimraf build dist docs/.vitepress/dist docs/api lib* types temp tmp *.tsbuildinfo ",
    "compile": "tsc -p ./tsconfig.json",
    "compile-watch": "npm run compile -- -w",
    "api-extractor-dev": "api-extractor run --local --verbose",
    "api-extractor": "api-extractor run --verbose",
    "api-documenter": "api-documenter markdown --input-folder ./temp --output-folder ./docs/api",
    "bundle": "rollup -c",
    "bundle-watch": "npm run bundle -- -w",
    "build": "npm-run-all --serial compile api-extractor api-documenter --parallel bundle docs:build --parallel docs:copy-res docs:patch",
    "standard-version": "standard-version",
    "standard-version-dryrun": "standard-version --dry-run",
    "git-push": "git push --follow-tags upstream trunk",
    "watch": "run-p compile-watch bundle-watch",
    "serve": "run-s docs:dev",
    "serve-index": "vite",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "npm run lint -- --fix",
    "prettier": "run-s prettier:js prettier:ts",
    "prettier:js": "prettier --check --write \"utils/**/*.mjs\"",
    "prettier:ts": "prettier --check --write --parser typescript \"{src,utils}/**/*.ts\"",
    "test-karma": "karma start --single-run --browsers ChromeHeadless karma.conf.js",
    "test": "run-s build",
    "tag": "run-s standard-version git-push",
    "update": "npx npm-check-updates -u"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@hpcc-js/util": "^2.40.0",
    "@microsoft/fast-element": "^1.6.2",
    "@microsoft/fast-foundation": "^2.27.1",
    "@observablehq/inspector": "^3.2.4",
    "@observablehq/parser": "^5.0.0",
    "@observablehq/runtime": "^4.18.3",
    "d3": "^7.2.1",
    "d3-sankey": "^0.12.3",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@codemirror/basic-setup": "^0.19.1",
    "@codemirror/lang-html": "^0.19.4",
    "@microsoft/api-documenter": "^7.13.76",
    "@microsoft/api-extractor": "^7.18.9",
    "@rollup/plugin-alias": "^3.1.8",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "chai": "^4.3.4",
    "copyfiles": "^2.4.1",
    "eslint": "^8.4.1",
    "karma": "^6.3.9",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-spec-reporter": "^0.0.32",
    "mocha": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.61.1",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-transform-tagged-template": "^0.0.3",
    "standard-version": "^9.3.2",
    "typescript": "^4.5.4",
    "vite": "^2.7.2",
    "vitepress": "^0.20.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hpcc-systems/hpcc-js-wc.git"
  },
  "author": "Gordon Smith <gordonjsmith@gmail.com>",
  "contributors": [],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hpcc-systems/hpcc-js-wc/issues"
  },
  "homepage": "https://github.com/hpcc-systems/hpcc-js-wc#readme"
}
