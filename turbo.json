{
    "$schema": "https://turborepo.org/schema.json",
    "baseBranch": "upstream/trunk",
    "pipeline": {
        "clean": {
            "dependsOn": [
                "^clean"
            ]
        },
        "compile": {
            "dependsOn": [
                "^compile"
            ]
        },
        "bundle": {
            "dependsOn": [
                "^bundle"
            ]
        },
        "update": {
            "dependsOn": [
                "^update"
            ]
        }
    }
}